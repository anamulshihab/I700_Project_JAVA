<?xml version="1.0" encoding="UTF-8"?>
<project name="module_myjavaproject" default="compile.module.myjavaproject">
  <dirname property="module.myjavaproject.basedir" file="${ant.file.module_myjavaproject}"/>
  
  <property name="module.jdk.home.myjavaproject" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.myjavaproject" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.myjavaproject" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.myjavaproject" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="myjavaproject.output.dir" value="${module.myjavaproject.basedir}/out/production/MyJavaProject"/>
  <property name="myjavaproject.testoutput.dir" value="${module.myjavaproject.basedir}/out/test/MyJavaProject"/>
  
  <path id="myjavaproject.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="myjavaproject.module.production.classpath">
    <path refid="${module.jdk.classpath.myjavaproject}"/>
  </path>
  
  <path id="myjavaproject.runtime.production.module.classpath">
    <pathelement location="${myjavaproject.output.dir}"/>
  </path>
  
  <path id="myjavaproject.module.classpath">
    <path refid="${module.jdk.classpath.myjavaproject}"/>
    <pathelement location="${myjavaproject.output.dir}"/>
  </path>
  
  <path id="myjavaproject.runtime.module.classpath">
    <pathelement location="${myjavaproject.testoutput.dir}"/>
    <pathelement location="${myjavaproject.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.myjavaproject">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.myjavaproject">
    <patternset refid="excluded.from.module.myjavaproject"/>
  </patternset>
  
  <path id="myjavaproject.module.sourcepath">
    <dirset dir="${module.myjavaproject.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.myjavaproject" depends="compile.module.myjavaproject.production,compile.module.myjavaproject.tests" description="Compile module MyJavaProject"/>
  
  <target name="compile.module.myjavaproject.production" depends="register.custom.compilers" description="Compile module MyJavaProject; production classes">
    <mkdir dir="${myjavaproject.output.dir}"/>
    <javac2 destdir="${myjavaproject.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.myjavaproject}/javac">
      <compilerarg line="${compiler.args.myjavaproject}"/>
      <bootclasspath refid="myjavaproject.module.bootclasspath"/>
      <classpath refid="myjavaproject.module.production.classpath"/>
      <src refid="myjavaproject.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.myjavaproject"/>
    </javac2>
    
    <copy todir="${myjavaproject.output.dir}">
      <fileset dir="${module.myjavaproject.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.myjavaproject.tests" depends="register.custom.compilers,compile.module.myjavaproject.production" description="compile module MyJavaProject; test classes" unless="skip.tests"/>
  
  <target name="clean.module.myjavaproject" description="cleanup module">
    <delete dir="${myjavaproject.output.dir}"/>
    <delete dir="${myjavaproject.testoutput.dir}"/>
  </target>
</project>